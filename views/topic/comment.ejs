
<form method="post">
<% if (user) { %>
<div style="display:none">
  姓名：<input type="text" name="name" value="<%= user.name %>" /><br />
  邮箱：<input type="text" name="email" value="<%= user.email %>" /><br />
  网址：<input type="text" name="website" value="/user/<%= user.name %>" /><br />
</div>
<% } %>
  
  <div class="form-group">
    <textarea name="content" class="form-control" rows="5" cols="80"></textarea>
  </div>
  <div class="text-right">
    <%if (user){ %>
    <input type="submit" class="btn btn-primary " value="说两句" />
    <%}else{%>
     <a href="javascript:void(0)" type="button" class="btn btn-primary " data-toggle="modal" data-target="#sign">说两句</a>
    <% } %>
  </div>
</form>


<% post.comments.forEach(function (comment, index) { %>
<div class="comment">
  <p><a href="<%= comment.website %>"><%= comment.name %></a>
  <span> 回复于 <%= comment.time %></span></p>
  <p><%- comment.content %></p>
</div>
<% }) %>
